<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @todo_list.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @todo_list.description %>
</p>

<table>
  <thead>
    <tr>
      <th>To-do</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  </tbody>
    <% @todo_list.todo_items.all.each do |todo_item| %>
      <tr>
       <td><%= render todo_item %></td>
       <td><%= render "todo_items/todo_options" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= render "todo_items/form" %>
<%= link_to 'Edit', edit_todo_list_path(@todo_list) %> |
<%= link_to 'Back', todo_lists_path %>
