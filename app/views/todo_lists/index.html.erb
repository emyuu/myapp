<p id="notice"><%= notice %></p>

<h1>My TODOs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_lists.each do |todo_list| %>
      <tr>
        <td><%= todo_list.title %></td>
        <td><%= todo_list.description %></td>
        <td><%= link_to todo_list, class: "btn btn-default btn-xs", title: "Show" do %>
          <span class="glyphicon glyphicon-eye-open"></span>
        <% end %>
        </td>
        <td><%= link_to edit_todo_list_path(todo_list), class: "btn btn-default btn-xs", title: "Edit" do %>
          <span class="glyphicon glyphicon-edit"></span>
        <% end %>
        </td>            
        <td><%= link_to  todo_list, class: "btn btn-default btn-xs", title: "Delete", 
                method: :delete, data: { confirm: 'Are you sure?' } do %>
          <span class="glyphicon glyphicon-trash"></span>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_todo_list_path, class: "btn btn-default", title: "Create new list" do %>
  <span class="glyphicon glyphicon-plus"></span>
<% end %>

